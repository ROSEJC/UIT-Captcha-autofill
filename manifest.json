{
  "manifest_version": 3,
  "name": "UIT CAPTCHA Solver",
  "version": "2.0",
  "description": "Automatically solves text-based CAPTCHA questions",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "browsingData"
  ],
  "host_permissions": [
    "https://daa.uit.edu.vn/*",
    "https://student.uit.edu.vn/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://daa.uit.edu.vn/*",
        "https://student.uit.edu.vn/*"
      ],
      "js": [
        "modules/mathSolver.js",
        "modules/answerExtractor.js",
        "modules/captchaSolver.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}